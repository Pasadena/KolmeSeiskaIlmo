# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /admin                          controllers.EventController.adminIndex

# Cabins
GET     /                               controllers.Application.index
POST    /                               controllers.Application.createCabin
POST    /:id/delete                     controllers.Application.deleteCabin(id: Long)
POST    /:id                            controllers.Application.editCabin(id: Long)

#Events
GET /admin/events                       controllers.EventController.index
GET /admin/loadEvents                   controllers.EventController.events
POST /admin/events/                     controllers.EventController.createEvent

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
GET     /webjars/*file                  controllers.WebJarAssets.at(file)
GET /javascriptRoutes                   controllers.Application.javascriptRoutes